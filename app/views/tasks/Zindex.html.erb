<%= render 'dashboard/header' %>
<table>
  <tr>
	<td>
	  <div style='height:200px; margin-left:45px; width:92%'>
		<h2>Tasks</h2>
		  <table class="table table-striped table-hover">
  		    <thead>
    		  <tr>
     	        <th>Title</th>       					
     			<th>Email</th>       					
     			<th>Source</th>      					
     			<th>Task type</th>   					
     			<th>Owner</th>       					
     			<th>Status</th>      					
     			<th>Created by</th>  					
     			<th colspan="3"></th>					
    		  </tr>
  			</thead>

  			<tbody>
   			  <% @tasks.each do |task| %>
			    <% if task.not_resolved? %>
     		      <tr>
        		    <td width=200px ><%= task.title %></td>
        			<td><%= task.email %></td>
        			<td><%= task.source.name %></td>
        			<td><%= task.task_type.name %></td>
        			<td><%= task.owner.full_name %></td>
        			<td><%= task.status.name %></td>
        			<td><%= task.creator.full_name %></td>
        			<td><%= link_to edit_task_path(task) do%>
						  <i class="fa fa-pencil"></i></td>
						<% end %>  
        			<td><%= link_to task, method: :delete, data: { confirm: 'Are you sure?' } do %>
						  <i class="fa fa-trash"></i></td>
						<% end %>  
	    			<td><%= link_to pending_task_path(task), method: :patch do %>
						  <i class="fa fa-history"></i></td></td>
						<% end %>  
					<td><%= link_to resolved_task_path(task), method: :patch do %>
						  <i class="fa fa-check-circle"></i>
					    <% end %>
					</td>
      			  </tr>
				</div>
			    <% end %>
			    <% if task.is_pending? %>
     		      <tr class="warning">
        		    <td width><%= task.title %></td>
        			<td><%= task.email %></td>
        			<td><%= task.source.name %></td>
        			<td><%= task.task_type.name %></td>
        			<td><%= task.owner.full_name %></td>
        			<td><%= task.status.name %></td>
        			<td><%= task.creator.full_name %></td>
        			<td><%= link_to edit_task_path(task) do%>
						  <i class="fa fa-pencil"></i></td>
						<% end %>  
        			<td><%= link_to task, method: :delete, data: { confirm: 'Are you sure?' } do %>
						  <i class="fa fa-trash"></i></td>
						<% end %>  
	    			<td><%= link_to unpending_task_path(task), method: :patch do %>
						  <i class="fa fa-history"></i></td></td>
						<% end %>  
					<td><%= link_to resolved_task_path(task), method: :patch do %>
						  <i class="fa fa-check-circle"></i>
					    <% end %>
					</td>
      			  </tr>
			    <% end %>
    		<% end %>
  	  	  </tbody>
	  	</table>
	  </div>
	</td>
	<td>
	  <div style='margin-right:10px'>
        <%= button_to 'Add Task', new_task_path, :method => "get", :class => "btn btn-primary btn-xs"%>
		<br>
		- or -
		<br>
		<br>
<div class="panel panel-default">
  <div class="panel-heading">Import Task</div>	
  <div class="panel-body">
	<%= form_tag import_tasks_path, multipart: true do %>
      <%= file_field_tag :file%><br>
      <%= submit_tag "Import", :class => "btn btn-primary btn-xs" %>
    <% end %>
  </div>
</div>

      </div>
	
	</td>
  </tr>
</table>